{
  "name": "@deskpro-apps/sage",
  "title": "Sage",
  "description": "",
  "version": "0.0.3",
  "scope": "agent",
  "isSingleInstall": false,
  "hasDevMode": true,
  "targets": [{ "target": "user_sidebar", "entrypoint": "index.html" }],
  "entityAssociations": {
    "linkedSageContact": {
      "entity": "person",
      "type": "external_id",
      "title": "Linked Sage Contact"
    }
  },
  "settings": {
    "client_id": {
      "title": "Client ID",
      "type": "string",
      "isRequired": true,
      "isBackendOnly": false,
      "order": 10
    },
    "client_secret": {
      "title": "Client Secret",
      "type": "string",
      "isRequired": true,
      "isBackendOnly": true,
      "order": 20
    },
    "callback_url": {
      "title": "Callback URL",
      "type": "app_embedded",
      "options": { "entrypoint": "#/admin/callback" },
      "isRequired": false,
      "isBackendOnly": true,
      "order": 30
    }
  },
  "proxy": {
    "whitelist": [
      {
        "url": "https://oauth.accounting.sage.com/.*",
        "methods": ["POST"],
        "timeout": 20
      },
      {
        "url": "https://api.accounting.sage.com/v3.1/.*",
        "methods": ["GET"],
        "timeout": 20
      }
    ]
  }
}
